{% extends 'backend.html.twig' %}
{% block body %}
  <h1>Users list</h1>
  <a href="/admin/users/add">Add new users</a>

  {% if (users) %}
    <table>
      <tr>
        <td>ID</td>
        <td>Login</td>
        <td>First name</td>
        <td>Last name</td>
        <td>Email</td>
        <td>Karma</td>
        <td>Action</td>
      </tr>

      {% for user in users %}
        <tr>
          <td>{{ user.id }}</td>
          <td>{{ user.login }}</td>
          <td>{{ user.firstName }}</td>
          <td>{{ user.lastName }}</td>
          <td>{{user.email}}</td>
          <td>{{user.karma}}</td>
          <td>
            <a href="#">Edit</a>
            &nbsp;|&nbsp;
            <a href="#">Delete</a>
          </td>
        </tr>
      {% endfor %}
    </table>

  {% endif %}

{% endblock %}