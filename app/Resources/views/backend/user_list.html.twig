{% extends 'backend.html.twig' %}
{% block body %}
  <div class="panel-heading">
    <h3 class="panel-title">Users list</h3>
  </div>
  <a class="btn btn-success pull-right add-btn" href="/admin/users/new">Add user</a>

  <div class="panel-body">
    {% if (users) %}
      <table class="table table-striped table-hover">
        <tr>
          <td>ID</td>
          <td>Login</td>
          <td>First name</td>
          <td>Last name</td>
          <td>Email</td>
          <td>Karma</td>
          <td>Action</td>
        </tr>

        {% for user in users %}
          <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.login }}</td>
            <td>{{ user.firstName }}</td>
            <td>{{ user.lastName }}</td>
            <td>{{user.email}}</td>
            <td>{{user.karma}}</td>
            <td>
              <a href="#">Edit</a>
              &nbsp;|&nbsp;
              <a href="#">Delete</a>
            </td>
          </tr>
        {% endfor %}
      </table>

    {% endif %}
  </div>

{% endblock %}