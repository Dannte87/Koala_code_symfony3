{% extends 'backend.html.twig' %}
{% block body %}
  <div class="panel-heading">
    <h3 class="panel-title">Add user</h3>
  </div>
  <div class="panel-body">
    {{ form_start(form) }}
    <div class="form-horizontal">
      <fieldset>
        <legend>Please enter user date {{ form_errors(form) }}</legend>

        <div class="form-group">
          <label for="user_form_login" class="col-lg-2 control-label">{{ form_label(form.login) }}</label>
          <div class="col-lg-10">
            {{ form_widget(form.login) }}
          </div>
        </div>

        <div class="form-group">
          <label for="user_form_email" class="col-lg-2 control-label">{{ form_label(form.email) }}</label>
          <div class="col-lg-10">
            {{ form_widget(form.email) }}
          </div>
        </div>

        <div class="form-group">
          <label for="user_form_first_name" class="col-lg-2 control-label">{{ form_label(form.first_name) }}</label>
          <div class="col-lg-10">
            {{ form_widget(form.first_name) }}
          </div>
        </div>

        <div class="form-group">
          <label for="user_form_last_name" class="col-lg-2 control-label">{{ form_label(form.last_name) }}</label>
          <div class="col-lg-10">
            {{ form_widget(form.last_name) }}
          </div>
        </div>

        <div class="form-group">
          <label for="user_form_password" class="col-lg-2 control-label">{{ form_label(form.password) }}</label>
          <div class="col-lg-10">
            {{ form_widget(form.password) }}
          </div>
        </div>

        <div class="form-group">
          <label for="user_form_description" class="col-lg-2 control-label">{{ form_label(form.description) }}</label>
          <div class="col-lg-10">
            {{ form_widget(form.description) }}
          </div>
        </div>

        <div class="form-group">
          <label for="user_form_karma" class="col-lg-2 control-label">{{ form_label(form.karma) }}</label>
          <div class="col-lg-10">
            {{ form_widget(form.karma) }}
          </div>
        </div>

        <div class="form-group">
          <label for="user_form_karma" class="col-lg-2 control-label">{{ form_label(form.role) }}</label>
          <div class="col-lg-10">
            {{ form_widget(form.role) }}
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <button type="reset" class="btn btn-default">Cancel</button>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </div>
      </fieldset>
    </div>
    {{ form_end(form) }}
  </div>
{% endblock %}